@* Model binding voor het bewerken van een product *@
@model DataAccessLayer.Models.Product

@{
    // Titel van de product bewerken pagina
    ViewData["Title"] = "Edit";
}

@* Pagina hoofdtitel *@
<h1>Edit</h1>

@* Subtitel *@
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Product bewerken formulier *@
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Naam veld *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @* Beschrijving veld *@
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" type="text" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @* Prijs veld *@
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @* Korting veld *@
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            @* Korting startdatum veld *@
            <div class="form-group">
                <label class="control-label">Discount start date</label>
                <input asp-for="DiscountStartDate" class="form-control" type="date" />
                <span asp-validation-for="DiscountStartDate" class="text-danger"></span>
            </div>
            @* Korting einddatum veld *@
            <div class="form-group">
                <label class="control-label">Discount end date</label>
                <input asp-for="DiscountEndDate" class="form-control" type="date" />
                <span asp-validation-for="DiscountEndDate" class="text-danger"></span>
            </div>
            @* Opslaan en terug knoppen *@
            <div class="form-group d-flex gap-2 mt-3">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}